{
  "manifest_version": 2,

  "name": "Script executor",
  "description": "This extension allows you to add script that will get executed on every page you open",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Set script"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": [],
      "js": ["main.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
